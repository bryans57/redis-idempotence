{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ],
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "removeComments": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "outDir": "dist",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "useUnknownInCatchVariables": false,
        "baseUrl": "src",
        "paths": {
            "@application/*": [
                "application/*"
            ],
            "@domain/*": [
                "domain/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@configuration": [
                "configuration/index"
            ],
            "@configuration/*": [
                "configuration/*"
            ],
            "@util": [
                "util/index"
            ],
            "@test": [
                "test/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
