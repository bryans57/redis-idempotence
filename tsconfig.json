{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "outDir": "dist",
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "useUnknownInCatchVariables": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}
